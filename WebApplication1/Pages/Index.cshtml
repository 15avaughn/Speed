@page
<style>
    .card {
        font-size: 180px;
        display: inline-block;
    }

    .hand {
        text-align: center;
    }
</style>

<div id="register">
    <fieldset>
        <legend>Register</legend>
        <div class="form-group">
            <label for="name" class="col-lg-2 control-label">Name</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="name" placeholder="Name">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="button" class="btn btn-primary" id="btnRegister">Register</button>
            </div>
        </div>
    </fieldset>
</div>
<div id="findOpponent">
    <fieldset>
        <legend>Find a player to play against!</legend>
        <div class="form-group">
            <input type="button" class="btn btn-primary" id="btnFindOpponentPlayer" value="Find Opponent" />
        </div>
    </fieldset>
</div>
<div id="findingOpponent">
    <fieldset>
        <legend>Nobody is here.</legend>
        <div class="form-group">
            Waiting for someone to join.
        </div>
    </fieldset>
</div>

<div id="test">

</div>
<div id="game">
    

    <div class="hand" id="opponentHand">
        <div class="card">
            <img src="~/images/Back.svg" id="player2Stack1" ondrop="drop(event)" ondragover="allowDrop(event)" draggable="false">
        </div>
        <div class="card">
            <img src="~/images/Back.svg" id="player2Stack2" ondrop="drop(event)" ondragover="allowDrop(event)" draggable="false">
        </div>
        <div class="card">
            <img src="~/images/Back.svg" id="player2Stack3" ondrop="drop(event)" ondragover="allowDrop(event)" draggable="false">
        </div>
        <div class="card">
            <img src="~/images/Back.svg" id="player2Stack4" ondrop="drop(event)" ondragover="allowDrop(event)" draggable="false">
        </div>
    </div>
    <div class="hand" id="playerHand">

        <div class="card">
            <img src="~/images/Back.svg" id="player1Stack1" ondrop="drop(event)" ondragover="allowDrop(event)" draggable="false">
        </div>
        <div class="card">
            <img src="~/images/Back.svg" id="player1Stack2" ondrop="drop(event)" ondragover="allowDrop(event)" draggable="false">
        </div>
        <div class="card">
            <img src="~/images/Back.svg" id="player1Stack3" ondrop="drop(event)" ondragover="allowDrop(event)" draggable="false">
        </div>
        <div class="card">
            <img src="~/images/Back.svg" id="player1Stack4" ondrop="drop(event)" ondragover="allowDrop(event)" draggable="false">
        </div>
        <div></div>
        <div class="card">
            <img src="~/images/Back.svg" id="playerDeck" ondragstart="drag(event)" draggable="true">
        </div>
    </div>
    <button type="button" id="resetButton" onclick="resetGame()">No One Wants To Reset</button>
    <div id="cardCount"></div>
</div>

<div id="newGame">
    <input type="button" class="btn btn-primary" id="btnNewGame" value="New Game" />
</div>


<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/client.js"></script>